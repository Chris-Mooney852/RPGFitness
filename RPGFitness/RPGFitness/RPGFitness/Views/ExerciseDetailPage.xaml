<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGFitness.Views.ExerciseDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Exercise Details"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand"/>
            <Grid>
                <Label Text="Exercise name: " Grid.Row="1" Grid.Column="0"/>
                <Label x:Name="ExerciseName" Text="{Binding ex_Name}" Grid.Row="1" Grid.Column="1"/>

                <Label Text="Exercise type: " Grid.Row="2" Grid.Column="0"/>
                <Label x:Name="ExerciseType" Text="{Binding ex_Type}" Grid.Row="2" Grid.Column="1"/>

                <Label Text="Total calories burned per 10 minutes: " Grid.Row="3" Grid.Column="0"/>
                <Label x:Name="CaloriesBurned" Text="{Binding cals_Burned}" Grid.Row="3" Grid.Column="1"/>


            </Grid>

            <Button Text="Add To Exercise Plan" Clicked="OnAddClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
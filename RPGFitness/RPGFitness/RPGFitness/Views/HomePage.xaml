<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGFitness.Views.HomePage"
             xmlns:classes="clr-namespace:RPGFitness.Classes">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Label Text="Home Page" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Grid.Row="1"/>
                <Label Text="Remaining Health" Grid.Row="2"/>
                <ProgressBar x:Name="HealthProgressBar" Progress="{Binding MaxDailyIntake}" Grid.Row="3">
                    <ProgressBar.BindingContext>
                        <classes:User/>
                    </ProgressBar.BindingContext>
                </ProgressBar>
                <Label Text="{Binding ConsumedCalories}">
                    <Label.BindingContext>
                        <classes:User/>
                    </Label.BindingContext>
                </Label>
                


            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
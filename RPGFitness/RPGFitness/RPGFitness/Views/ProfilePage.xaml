<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGFitness.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="User Profile"
                HorizontalOptions="CenterAndExpand" />

            <Grid>
                <Label Text="Curent Weight:" FontSize="Small" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Entry x:Name="WeightEntry" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1"/>
                <Label Text="Goal Weight:" FontSize="Small" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Entry x:Name="GoalEntry" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1"/>
                <Label Text="Max Daily Calories" FontSize="Small" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>
                <Entry x:Name="CalorieEntry" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1"/>
                <Button Text="Calculate" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" Clicked="CalculateDailyIntake"/>
               

            </Grid>

            <Button Text="Submit" Clicked="SubmitButtonClicked" HorizontalOptions="Center" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RPGFitness.Views"
             x:Class="RPGFitness.Views.UserDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout.BindingContext>
                <local:ViewModel/>
            </StackLayout.BindingContext>
            <Label Text="Enter your weight details" 
                HorizontalOptions="CenterAndExpand"/>

            <Label Text="Current Weight" FontSize="Small"/>
            <Entry x:Name="CurrentWeight" TextChanged="TextChanged"/>
            <Label Text="Goal Weight" FontSize="Small"/>
            <Entry x:Name="GoalWeight" TextChanged="TextChanged"/>

            <Button x:Name="SubmitButton" Text="Submit" Clicked="OnSubmitClicked" IsEnabled="False"
                    Command="{Binding LoginPageClickCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
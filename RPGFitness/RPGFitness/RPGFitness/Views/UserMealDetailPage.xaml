<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGFitness.Views.UserMealDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Meal Details" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Meal Name"/>
            <Label x:Name="NameLabel" Text="{Binding recipeName}"/>
            <Label Text="Total Calories"/>
            <Label x:Name="CalorieLabel" Text="{Binding totCalories}"/>
            <Button Text="Add to daily intake" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
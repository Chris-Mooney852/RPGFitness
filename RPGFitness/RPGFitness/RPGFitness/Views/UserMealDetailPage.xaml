<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RPGFitness.Views.UserMealDetailPage"
             Title="Meal Details">
   
    <ContentPage.Content>
        <StackLayout Padding="40,40,40,40">
            
            <Label Text="Meal Name" FontAttributes="Bold" FontSize="Large"/>
            <Label x:Name="NameLabel" Text="{Binding recipeName}" FontSize="Large"/>
            <Label Text=""/>
            <Label Text="Total Calories" FontAttributes="Bold" FontSize="Large"/>
            <Label x:Name="CalorieLabel" Text="{Binding totCalories}" FontSize="Large"/>
            <Label  Text=""/>
            <Button Text="Add to daily intake" Clicked="Button_Clicked" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>